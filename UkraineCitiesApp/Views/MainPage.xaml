<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UkraineCitiesApp.MainPage"
             Title="Міста України">
    <StackLayout Padding="10">
        <Label Text="Міста України" FontSize="24" HorizontalOptions="Center" />
        <Button Text="Показати всі міста" Clicked="ShowAllCities_Clicked" />
        <Button Text="Показати вибірку міст" Clicked="ShowSampleCities_Clicked" />
        <Button Text="Показати мін/макс відстань" Clicked="ShowMinMaxDistance_Clicked" />
        <Button Text="Показати контакти" Clicked="ShowContacts_Clicked" />
        <Button Text="Про розробника" Clicked="ShowDeveloperInfo_Clicked" />
    </StackLayout>
</ContentPage>
