<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UkraineCitiesApp.CitiesPage"
             Title="Список міст">
    <StackLayout>
        <CollectionView ItemsSource="{Binding Cities}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" />
                        <Label Text="Відстань від Києва: {Binding Distance} км" >
                            <Label.FormatedText>
                                <FormattedString>
                                    <Span Text="Відстань від Києва: "/>
                                    <Span Text="{Binding Region}"/>
                                    <Span Text="км"/>
                                </FormattedString>
                            </Label.FormatedText>
                        </Label>
                        <Label Text="Населення: {Binding Population}" />
                        <Button Text="Показати на карті" Clicked="ShowOnMap_Clicked" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
